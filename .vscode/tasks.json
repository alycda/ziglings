{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Present with Speaker Notes",
            "dependsOn": ["Presentation", "Speaker Notes"],
            "problemMatcher": []
        },
        {
            "label": "Presentation",
            "type": "shell",
            "command": "nix-shell --command \"presenterm --publish-speaker-notes slides.md\"",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "group": "workspace-terminals"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "Speaker Notes",
            "type": "shell",
            "command": "nix-shell --command \"presenterm --listen-speaker-notes slides.md\"",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "group": "workspace-terminals"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        }
    ]
}